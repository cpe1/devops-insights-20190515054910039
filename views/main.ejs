<!DOCTYPE html>
<html lang="en-us">

    <head>
        <title>Current NZ Weather</title>

        <link rel="stylesheet" href="/built/css/default.css" />

        <script src="/bower_components/angular/angular.js"></script>
        <script src="/bower_components/angular-route/angular-route.js"></script>
        <script src="/js/controllers.js"></script>
    </head>

    <body onload="initilise()">
        <div float="left">
            <% include includes/mainbody %>
        </div>
        <div>
            <div id="map"></div>
            <div id="clickweather" class="underline ng-binding"></div>
        </div>

        <script>
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: {lat: -40.9006, lng: 174.8860},
                    zoom: 5
                });
            }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCxZVC-04q9nZ0ArZhhU3ipu87Ker8rUfs&callback=initMap"
        type="text/javascript">
        </script>
        
    </body>

    <script>
         angular.element(document).ready(function() {
            angular.bootstrap(document, ['ConsoleModule']);
        });
    </script>

</html>